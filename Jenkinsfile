pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                echo 'cloning the repo into local server'
            }
        }
        stage('Build') {
            steps {
                echo 'Build the code into package'
            }
        }
        stage('test') {
            steps {
                echo 'Testing the application'
            }
        }
        stage('deploy') {
            steps {
                echo 'Hello World'
            }
        }
    }
}

